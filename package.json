  "scripts": {
    "dev": "ts-node-dev --inspect --respawn --transpile-only src/server.ts",
    "dev:ui": "vite --host",
    "build": "npm run type-check && tsc && vite build",
    "build:server": "tsc",
    "build:ui": "npm run type-check:ui && vite build",
    "start": "node dist/server.js",
    "preview:ui": "vite preview",
    "type-check": "npm run type-check:server && npm run type-check:ui",
    "type-check:server": "tsc --noEmit",
    "type-check:ui": "tsc --project client/tsconfig.json --noEmit",
    "test": "echo \"Error: no test specified\" && exit 1",
    "logs:tail": "tail -f logs/app.log"
  },
